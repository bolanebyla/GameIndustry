<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Ganre</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in games)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Ganre</td>
                    <td>@item.ReleaseDate.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<Game> games { get; set; }

    protected async override Task OnInitializedAsync()
    {
        games = new List<Game>()
        {
            new Game()
            {
                Name = "Farming Simulator 2019",
                Ganre = "Simulator",
                ReleaseDate = new DateTime(2018, 11, 19)
            },
                        new Game()
            {
                Name = "The Witcher 3",
                Ganre = "Action/RPG",
                ReleaseDate = new DateTime(2015, 05, 18)
            },
                                    new Game()
            {
                Name = "Distroy ALL Humans!",
                Ganre = "Action-Adventure",
                ReleaseDate = new DateTime(2020, 07, 28)
            },
        };

    }
}
