@if (!IsTable)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p>@Game.Name</p>
            <p>@Game.Ganre</p>
            <p>@Game.ReleaseDate.ToString("dd.MM.yyyy")</p>
        </div>

    </div>

    @if (DisplayButtons)
    {
        <div class="row">
            <div class="col offset-3">
                <button class="btn btn-danger" @onclick="SwitchGame">SwitchGame</button>
            </div>
            <div class="col">
            </div>
        </div>
    }
}
else
{
    <tr>
        <td>@Game.Name</td>
        <td>@Game.Ganre</td>
        <td>@Game.ReleaseDate.ToString("dd.MM.yyyy")</td>
        <td>
            @if (DisplayButtons)
            {
                <button class="btn btn-danger" @onclick="(() => DeleteGame.InvokeAsync(Game))">Delete</button>
            }
        </td>
    </tr>
}

@code {
    [Parameter]
    public Game Game { get; set; }

    [Parameter]
    public bool IsTable { get; set; }

    [Parameter]
    public bool DisplayButtons { get; set; } = false;

    [Parameter]
    public EventCallback<Game> DeleteGame { get; set; }

    [Parameter]
    public EventCallback SwitchGame { get; set; }
}
