@if (!IsTable)
{
    <div class="row text-center alert-info">
        <div class="col">
            <p>@Game.Name</p>
            <p>@Game.Ganre</p>
            <p>@Game.ReleaseDate.ToString("dd.MM.yyyy")</p>
        </div>
    </div>
}
else
{
    <tr>
        <td>@Game.Name</td>
        <td>@Game.Ganre</td>
        <td>@Game.ReleaseDate.ToString("dd.MM.yyyy")</td>
    </tr>
}

@code {
    [Parameter]
    public Game Game { get; set; }

    [Parameter]
    public bool IsTable { get; set; }
}
